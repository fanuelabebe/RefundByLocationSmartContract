<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:text="Some place delivery"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/init_pay_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20Ether"
        android:textSize="11sp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"/>
    <TextView
        android:id="@+id/end_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jan 24, 2024 10:20:20"
        android:textSize="11sp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/compliance_tv"
        app:layout_constraintTop_toBottomOf="@+id/init_pay_tv"/>
    <TextView
        android:id="@+id/compliance_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Compliant"
        android:textSize="11sp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/init_pay_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>